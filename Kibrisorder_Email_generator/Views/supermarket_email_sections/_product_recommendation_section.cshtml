@{
    int count = 1;
    var items = Model;
    var tag = "</tr>";
    var tag2 = "<td width='6'></td>";
    var tagOpen = " <tr>";
}
<div class='movableContent'>
    <table width="600" border="0" cellspacing="0" cellpadding="0">
        <tr><td height='5'></td></tr>
        <tr>
            <td>
                <div class="contentEditableContainer contentTextEditable">
                    <div class="contentEditable">
                        <p style='font-size:12px;color:#999999;text-align:center;'>@ViewBag.section_header_text</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr><td height='5'></td></tr>
        <tr>
            <td>
                <div class="contentEditableContainer contentTextEditable">
                    <div class="contentEditable">
                        <p style='color:#000000;font-size:32px;text-align:center;font-weight:bold;'>@ViewBag.section_header_main_text</p>
                    </div>
                </div>
            </td>
        </tr>
        <tr><td height='5'></td></tr>
    </table>
</div>





<div class='movableContent'>
    <table width="600" border="0" cellspacing="0" cellpadding="0">
        <tr><td height='6px'></td></tr>
        <tr>


            @*loop starts here*@

            @foreach (var product in items)
            {
                if (count == 4)
                {
                @:</tr>
                @:<tr><td height='16px'></td></tr>
                @:<tr>
                    count = 1;


                }

                <td width='176'>
                    <table width="176" border="0" cellspacing="0" cellpadding="0" style='border:1px solid #EBE3E3;border-radius:6px;-moz-border-radius:6px;-webkit-border-radius:6px'>
                        <tr><td height='18' colspan='3'></td></tr>
                        <tr>
                            <td width='18'></td>
                            <td>
                                <table width="140" border="0" cellspacing="0" cellpadding="0">
                                    <tr>
                                        <td align='center'>
                                            <div class="contentEditableContainer contentImageEditable">
                                                <div class="contentEditable">
                                                    <img src="@product.img_url" data-default="placeholder" data-max-width="365" width='136' height='115' alt='Shopping Deals'>
                                                </div>
                                            </div>

                                        </td>
                                    </tr>
                                    <tr><td height='30'></td></tr>
                                    <tr>
                                        <td>
                                            <div class="contentEditableContainer contentTextEditable">
                                                <div class="contentEditable">
                                                    <p style='font-size:14px;color:#000000;font-weight:bold;'>@product.name</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr><td height='12'></td></tr>
                                    <tr>
                                        <td>
                                            <div class="contentEditableContainer contentTextEditable">
                                                <div class="contentEditable">
                                                    <p style='color:#999999;font-size:18px;font-weight:bold;'>@product.price @product.currency</p>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr><td height='25'></td></tr>
                                    <tr>
                                        <td>
                                            <div class="contentEditableContainer contentTextEditable">
                                                <div class="contentEditable">
                                                    <a target='_blank' class='link2' href="@product.product_url">Buy now</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            <td width='18'></td>
                        </tr>
                        <tr><td height='25' colspan='3'></td></tr>
                    </table>
                </td>
                <td width='6'></td>





                count++;

                @*loop ends here*@
            }

        </tr>


    </table>
</div>
